@page
@model GigaBankLab.Pages.Atm.AtmLoginModel

@{
    ViewData["Title"] = "AtmLogin";
}

<h1>Авторизация</h1>

<h4>Введите номер карты и PIN-код</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AtmLoginDTO.CreditCardNumber" class="control-label"></label>
                <input asp-for="AtmLoginDTO.CreditCardNumber" class="form-control" />
                <span asp-validation-for="AtmLoginDTO.CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AtmLoginDTO.CreditCardPIN" class="control-label"></label>
                <input asp-for="AtmLoginDTO.CreditCardPIN" class="form-control" />
                <span asp-validation-for="AtmLoginDTO.CreditCardPIN" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
