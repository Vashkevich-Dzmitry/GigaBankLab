@page
@model GigaBankLab.Pages.Deposits.CreateDepositContractModel

@{
    ViewData["Title"] = "CreateDepositContract";
}

<h1>CreateDepositContract</h1>

<h4>DepositContract</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepositDTO.ClientId" class="control-label"></label>
                <select asp-for="DepositDTO.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepositDTO.DepositId" class="control-label"></label>
                <select asp-for="DepositDTO.DepositId" class ="form-control" asp-items="ViewBag.DepositId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepositDTO.Amount" class="control-label"></label>
                <input asp-for="DepositDTO.Amount" type=number min=0 class="form-control" />
                <span asp-validation-for="DepositDTO.Amount" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> | 
                <a asp-page="ClientsDeposits">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
